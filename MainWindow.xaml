<Window x:Class="ScrabbleHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScrabbleHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="btnCheat" Content="Open play calculator" Click="btnCheat_Click"/>
        <Button x:Name="btnGame" Content="Open a new game" Click="btnGame_Click"/>
        <Button x:Name="btnGameMcT" Content="Open a new game (McT's Code)" Click="btnGameMcT_Click"/>
    </StackPanel>
</Window>
